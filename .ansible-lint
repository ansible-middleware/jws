# .ansible-lint
exclude_paths:
  - .cache/
  - .github/
  - molecule/
  - .ansible-lint
  - .yamllint
  - playbook.yml

rulesdir:
   - ../../ansible-lint-custom-rules/rules/

enable_list:
  - fqcn-builtins  # opt-in
  - no-log-password  # opt-in

skip_list:
  - 204
  - blocked_modules
  - vars_should_not_be_used
  - role_vars_start_with_role_name

warn_list:
  - vars_in_vars_files_have_valid_names
  - experimental
  - ignore-errors
  - no-handler
  - fqcn-builtins
  - no-log-password
  - unnamed-task
  - command-instead-of-module
  - no-changed-when
  - task_has_valid_name

use_default_rules: true
parseable: true
