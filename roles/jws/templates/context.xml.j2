<!-- The contents of this file will be loaded for each web application -->
<Context>

    <!-- Default set of monitored resources. If one of these changes, the    -->
    <!-- web application will be reloaded.                                   -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <WatchedResource>WEB-INF/tomcat-web.xml</WatchedResource>
    <WatchedResource>${catalina.base}/conf/web.xml</WatchedResource>

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!--
    <Manager pathname="" />
    -->
    <!-- JDBC Datasources -->
    {% if tomcat.datasources is defined %}{% for ds in tomcat.datasources %}
    <Resource
        name="{{ ds.name }}"
        auth="Container"
        type="javax.sql.DataSource"
        {%if ds.username is defined %}username="{{ ds.username }}"{% endif %}
        {%if ds.password is defined %}password="{{ ds.password }}"{% endif %}
        driverClassName="{{ ds.driver_classname }}"
        url="{{ ds.url }}"
        {%if ds.connection_pool is defined and ds.connection_pool.maxActive %}maxActive="{{ ds.connection_pool.maxActive }}"{% endif %}
        {%if ds.connection_pool is defined and ds.connection_pool.maxIdle %}maxIdle="{{ ds.connection_pool.maxIdle }}"{% endif %}
        />{% endfor %}
     {% endif %}
</Context>
